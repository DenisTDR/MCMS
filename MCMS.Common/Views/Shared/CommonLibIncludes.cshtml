@using MCMS.Base.Extensions
@using MCMS.Common

@inject MCommonConfig Config

@using (Html.BeginMScripts())
{
    if (Config.IncludeClipboardJs)
    {
        <script src="~/lib/clipboard.js/clipboard.min.js" asp-append-version="true"></script>
    }

    if (Config.IncludeHighlightJs)
    {
        <script src="~/lib/highlight.js/highlight.pack.js" asp-append-version="true"></script>
        <script src="~/lib/highlight.js-custom/highlightjs-line-numbers.min.js" asp-append-version="true"></script>
    }
}
@using (Html.BeginMPageScripts())
{
    if (Config.IncludeClipboardJs)
    {
        <script src="~/js/mcms-clipboard.js" asp-append-version="true"></script>
    }
}

@if (Config.IncludeHighlightJs)
{
    @using (Html.BeginMStyles())
    {
        <link rel="stylesheet" href="~/lib/highlight.js/styles/default.css" asp-append-version="true">
        <link rel="stylesheet" href="~/lib/highlight.js/atom-one-dark.css" asp-append-version="true">
        <link rel="stylesheet" href="~/lib/highlight.js/atom-one-dark-reasonable.css" asp-append-version="true">
        <link rel="stylesheet" href="~/lib/highlight.js-custom/hljs-ln-styles.css" asp-append-version="true">
    }
}